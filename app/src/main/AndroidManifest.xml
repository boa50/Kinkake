<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.boa50.kinkake">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DetalhamentoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MusicasCantorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MusicasReservadasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MusicasAdicionarActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>